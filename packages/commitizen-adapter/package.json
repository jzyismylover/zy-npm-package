{
  "name": "@bestzy/commitizen-adapter",
  "version": "2.2.1",
  "description": "zy的Commitizen适配器，支持中文提示的约定式提交",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "zy-cz": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "commitizen",
    "conventional-commits",
    "git",
    "commit",
    "zy"
  ],
  "author": "zy",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "inquirer": "^8.2.6",
    "chalk": "^4.1.2",
    "word-wrap": "^1.2.5"
  },
  "peerDependencies": {
    "commitizen": ">=4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "rimraf": "^5.0.5",
    "@types/inquirer": "^8.2.10",
    "@types/word-wrap": "^1.2.1",
    "@types/node": "^20.0.0"
  }
}
